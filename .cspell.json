{
  "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
  "version": "0.2",
  "language": "en",
  "minWordLength": 3,
  "files": [
    "packages/*/src/**/*.{js,ts,jsx,tsx,vue}",
    "apps/*/src/**/*.{js,ts,jsx,tsx,vue}",
    "internal/*/src/**/*.{js,ts,jsx,tsx,vue}"
  ],
  "dictionaries": [
    "typescript",
    "node",
    "npm",
    "html",
    "css",
    "fonts",
    "softwareTerms"
  ],
  "words": [
    "Yalc",
    "jseslint",
    "serviceworker",
    "videojs",
    "modelcontextprotocol",
    "smacss",
    "iconfont",
    "vite",
    "vitest",
    "pinia",
    "composables",
    "unref",
    "shallowref",
    "rollup",
    "postcss",
    "autoprefixer",
    "storybook",
    "vitepress",
    "turbo",
    "monorepo",
    "scrollbar",
    "noopener",
    "noreferrer",
    "hsl",
    "sfc",
    "aabbggrr",
    "avc",
    "bbggrr",
    "bgr",
    "centiseconds",
    "cny",
    "dashjs",
    "firstframe",
    "flvjs",
    "fns",
    "fontname",
    "haabbggrr",
    "hbbggrr",
    "hmr",
    "idf",
    "idx",
    "llm",
    "lru",
    "mbps",
    "mcp",
    "mmm",
    "mozfullscreenchange",
    "mpd",
    "mpegurl",
    "msfullscreenchange",
    "msvideo",
    "ogv",
    "primarycolor",
    "primarycolour",
    "quicktime",
    "rtmp",
    "rtsp",
    "rtt",
    "sbv",
    "sdp",
    "srt",
    "vjs",
    "vnd",
    "vtt",
    "webrtc",
    "webvtt",
    "wimax",
    "xxs",
    "popconfirm",
    "gpt",
    "deepseek",
    "unflatten",
    "prepass",
    "interpolations",
    "fmt",
    "hsv",
    "webkitbeginfullscreen",
    "webkitendfullscreen",
    "formatjs",
    "bak",
    "Jaro",
    "Winkler",
    "actuals",
    "BFS",
    "BEM",
    "testrc",
    "domcontentloaded",
    "networkidle",
    "fse"
  ],
  "patterns": [
    {
      "name": "jwt-token",
      "pattern": "/eyJ[A-Za-z0-9_-]+\\.[A-Za-z0-9_-]+\\.[A-Za-z0-9_-]+/g"
    },
    {
      "name": "css-var",
      "pattern": "/--[a-zA-Z][a-zA-Z0-9-]*/g"
    },
    {
      "name": "import-path",
      "pattern": "/@\\/[a-zA-Z0-9/-]+/g"
    }
  ],
  "ignoreRegExpList": ["jwt-token", "css-var", "import-path"],
  "ignorePaths": [
    "**/*/dist",
    "**/*/build",
    "**/*/public",
    "**/*/es",
    "**/*/lib",
    "**/*/stories",
    "**/*/__test__",
    "**/*/storybook-static",
    "**/*/docs",
    "packages/icons",
    "apps/server",
    "apps/client/",
    ".husky/**/*",
    ".turbo/**/*",
    ".vscode/**/*",
    "scripts/**/*",
    "typings/**/*",
    ".browserslistrc",
    ".editorconfig",
    ".gitignore",
    ".markdownlint.json",
    ".prettierignore",
    ".stylelintignore",
    "commitlint.config.ts",
    "eslint.config.ts",
    "pnpm-lock.yaml",
    "pnpm-workspace.yaml",
    "prettier.config.ts",
    "README.md",
    "**/*/rollup.config.js",
    "stylelint.config.ts",
    "tsconfig.json",
    "turbo.json",
    "**/*/node_modules",
    "**/*/tsconfig.tsbuildinfo",
    "**/*/tsconfig.stories.tsbuildinfo",
    "**/*.svg",
    "**/*.sh",
    "**/*.conf",
    "**/*.png",
    "**/*.json",
    "**/*.lock",
    "**/*.ttf",
    "**/*.otf",
    "**/*.woff",
    "**/*.ogg",
    "**/*.yml",
    "**/*.scss"
  ]
}
