{
  "name": "@kit/i18n-tools",
  "version": "1.0.0",
  "private": true,
  "description": "I18n automation tools for Vue/React projects",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "i18n-tools": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./cli": "./dist/cli.js"
  },
  "scripts": {
    "lint": "eslint . --max-warnings 0",
    "test": "vitest --run --passWithNoTests",
    "build": "pnpm run clean && tsup",
    "dev": "tsx src/cli.ts",
    "clean": "rimraf dist",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@vue/compiler-dom": "^3.5.28",
    "@vue/compiler-sfc": "^3.5.28",
    "chalk": "^5.6.2",
    "dotenv": "^17.2.4",
    "inquirer": "^13.2.2",
    "openai": "^6.19.0",
    "typescript": "^5.9.3",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@kit/eslint-config": "workspace:*",
    "@kit/typescript-config": "workspace:*",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^25.2.3",
    "@types/yargs": "^17.0.35",
    "rimraf": "*",
    "tsup": "^8.5.1",
    "tsx": "*"
  }
}
