{
  "name": "@kit/sentinel",
  "version": "0.1.0",
  "description": "CLI tool to install AI sentinel workflows into business repositories",
  "author": "<sunweijie@able-elec.com>",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./cli": {
      "types": "./dist/cli.d.ts",
      "import": "./dist/cli.js"
    }
  },
  "bin": {
    "sentinel": "./dist/cli.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "lint": "eslint . --max-warnings 0",
    "test": "vitest --run --passWithNoTests",
    "build": "pnpm run clean && tsup",
    "clean": "rimraf dist",
    "dev": "tsx src/cli.ts"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.3",
    "fs-extra": "^11.3.3",
    "inquirer": "^13.3.0",
    "ora": "^9.3.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "*",
    "eslint": "*",
    "rimraf": "*",
    "tsup": "*",
    "tsx": "*",
    "vitest": "*"
  }
}
