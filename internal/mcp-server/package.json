{
  "name": "@aix/mcp-server",
  "version": "1.0.0",
  "description": "MCP server for component library",
  "author": "<sunweijie@able-elec.com>",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "aix-mcp-server": "./dist/cli.js"
  },
  "keywords": [
    "mcp-server",
    "component-library"
  ],
  "files": [
    "dist",
    "data"
  ],
  "scripts": {
    "lint": "eslint . --max-warnings 0",
    "test": "vitest --run --passWithNoTests",
    "build": "pnpm run clean && tsup",
    "clean": "rimraf dist",
    "dev": "tsx src/cli.ts",
    "extract": "rimraf data && tsx src/cli.ts extract --packages=../../packages",
    "postinstall": "echo 'ðŸ“¦ AIX Components MCP Server installed successfully! Use: npx @aix/mcp-server --help'"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "chalk": "^5.6.2",
    "commander": "^14.0.3",
    "fuse.js": "^7.1.0",
    "glob": "^13.0.2",
    "gray-matter": "^4.0.3",
    "lunr": "^2.3.9",
    "typescript": "^5.9.3",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "@types/ws": "^8.18.1",
    "eslint": "*",
    "rimraf": "*",
    "tsup": "^8.5.1",
    "tsx": "*",
    "vitest": "*"
  }
