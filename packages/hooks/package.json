{
  "name": "@aix/hooks",
  "version": "1.0.0",
  "description": "AIX Component Library - Utility Hooks Collection",
  "type": "module",
  "main": "./lib/index.js",
  "module": "./es/index.js",
  "types": "./es/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./es/index.d.ts",
      "import": "./es/index.js",
      "require": "./lib/index.js"
    },
    "./use-locale": {
      "types": "./es/use-locale/index.d.ts",
      "import": "./es/use-locale/index.js",
      "require": "./lib/use-locale/index.js"
    }
  },
  "files": [
    "dist",
    "lib",
    "es",
    "README.md"
  ],
  "scripts": {
    "dev": "rollup -c -w",
    "build": "pnpm run clean && pnpm run build:js && pnpm run build:types",
    "build:js": "rollup -c",
    "build:types": "tsc -p tsconfig.json",
    "clean": "rimraf dist es lib tsconfig.tsbuildinfo",
    "lint": "eslint . --max-warnings 0",
    "test": "vitest --run --passWithNoTests"
  },
  "peerDependencies": {
    "vue": "^3.5.28"
  },
  "license": "MIT"
}
