{
  "name": "@aix/theme",
  "version": "1.0.0",
  "description": "AIX Design System - Theme System with CSS Variables & TypeScript API",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "style": "./dist/index.css",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./style": "./dist/index.css",
    "./vars": "./dist/vars/index.css",
    "./vars/base": "./dist/vars/base-tokens.css",
    "./vars/light": "./dist/vars/light.css",
    "./vars/dark": "./dist/vars/dark.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "rollup -c -w",
    "lint": "stylelint 'src/**/*.{css,scss}' --max-warnings 0",
    "build": "pnpm run clean && rollup -c && pnpm run build:types",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "clean": "rimraf dist"
  },
  "publishConfig": {
    "registry": "https://it-artifactory.yitu-inc.com/api/npm/npm-local/"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "vue": {
      "optional": true
    }
  },
  "devDependencies": {
    "@kit/stylelint-config": "workspace:*",
    "@kit/typescript-config": "workspace:*",
    "autoprefixer": "*",
    "postcss": "*",
    "rimraf": "*",
    "rollup": "*",
    "rollup-plugin-esbuild": "*",
    "rollup-plugin-postcss": "*",
    "stylelint": "*",
    "typescript": "*",
    "vue": "^3.5.0"
  }
}
