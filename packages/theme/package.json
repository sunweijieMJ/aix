{
  "name": "@aix/theme",
  "version": "0.0.0",
  "description": "AIX Design System - Theme System with CSS Variables & TypeScript API",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "style": "./dist/index.css",
  "sideEffects": [
    "*.css",
    "dist/**/*.css",
    "dist/index.js",
    "dist/index.cjs"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./style": "./dist/index.css",
    "./vars": "./dist/vars/index.css",
    "./vars/base": "./dist/vars/base-tokens.css",
    "./vars/light": "./dist/vars/light.css",
    "./vars/dark": "./dist/vars/dark.css",
    "./vars/compat": "./dist/vars/index.compat.css"
  },
  "bin": {
    "aix-theme-export": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "gen:css": "tsx scripts/gen-css.ts",
    "dev": "pnpm run gen:css && rollup -c -w",
    "lint": "stylelint 'src/**/*.{css,scss}' --max-warnings 0",
    "build": "pnpm run clean && pnpm run gen:css && rollup -c && pnpm run build:types",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "clean": "rimraf dist tsconfig.tsbuildinfo"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "vue": {
      "optional": true
    }
  },
  "devDependencies": {
    "@kit/stylelint-config": "workspace:*",
    "@kit/typescript-config": "workspace:*",
    "autoprefixer": "*",
    "postcss": "*",
    "postcss-import": "^16.1.1",
    "rimraf": "*",
    "rollup": "*",
    "rollup-plugin-esbuild": "*",
    "rollup-plugin-postcss": "*",
    "stylelint": "*",
    "tsx": "*",
    "typescript": "*",
    "vue": "*"
  }
}
