{
  "name": "@aix/chat-sdk",
  "version": "1.0.0",
  "description": "AI Chat SDK - Framework-agnostic core for chat applications",
  "license": "MIT",
  "type": "module",
  "main": "./lib/index.js",
  "module": "./es/index.js",
  "types": "./es/index.d.ts",
  "exports": {
    ".": {
      "types": "./es/index.d.ts",
      "import": "./es/index.js",
      "require": "./lib/index.js"
    },
    "./dist": {
      "types": "./es/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./es/*": "./es/*",
    "./lib/*": "./lib/*",
    "./dist/*": "./dist/*",
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "lib",
    "es"
  ],
  "scripts": {
    "dev": "rollup -c -w",
    "lint:script": "eslint . --max-warnings 0",
    "lint": "pnpm run lint:script",
    "test": "vitest --run --passWithNoTests",
    "build": "pnpm run clean && pnpm run build:js && pnpm run build:types",
    "build:js": "rollup -c",
    "build:types": "tsc --build --force",
    "clean": "rimraf dist lib es"
  },
  "devDependencies": {
    "@kit/eslint-config": "workspace:*",
    "@kit/typescript-config": "workspace:*",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "happy-dom": "^20.0.8",
    "rimraf": "*",
    "tsx": "*",
    "typescript": "*",
    "vitest": "^3.2.4"
  }
}
