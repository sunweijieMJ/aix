# ============================================
# 开发环境配置
# ============================================
NODE_ENV=development
PORT=3001
HOST=0.0.0.0
API_PREFIX=/local/v1

# ============================================
# 数据库配置
# ============================================
DB_TYPE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=base_node_dev
DB_USER=postgres
DB_PASSWORD=password

# ============================================
# JWT 配置
# ============================================
JWT_SECRET=dev_jwt_secret_key_change_in_production
JWT_EXPIRES_IN=24h

# ============================================
# 缓存配置
# ============================================
CACHE_TYPE=memory
CACHE_TTL=3600

# Redis 配置（可选，当 CACHE_TYPE=redis 时使用）
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0
# REDIS_KEY_PREFIX=dev:

# ============================================
# 日志配置
# ============================================
LOG_LEVEL=debug
LOG_FILE_ENABLED=true
LOG_DIR=./logs

# ============================================
# 安全配置
# ============================================
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]
ENABLE_HELMET=true
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW=60000

# ============================================
# 监控配置
# ============================================
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true

# ============================================
# API文档配置
# ============================================
SWAGGER_ENABLED=true
SWAGGER_PATH=/docs
