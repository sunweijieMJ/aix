{
  "name": "@aix/server",
  "version": "0.0.0",
  "private": true,
  "description": "Lightweight Hono API server template",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "start": "tsx watch src/index.ts",
    "dev": "tsx watch src/index.ts",
    "build": "npm run clean && tsup src/index.ts --format esm --dts",
    "prod": "node dist/index.js",
    "clean": "rimraf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "hono": "^4.11.9",
    "@hono/node-server": "^1.19.9",
    "@hono/zod-openapi": "^1.2.2",
    "@hono/swagger-ui": "^0.5.3",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.3.1",
    "jsonwebtoken": "^9.0.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@kit/eslint-config": "workspace:*",
    "@kit/typescript-config": "workspace:*",
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.2.3",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^10.0.0",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.3",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
