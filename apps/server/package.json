{
  "name": "@aix/server",
  "version": "0.0.0",
  "private": true,
  "description": "Lightweight Koa API server for configuration management",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "start": "tsx watch src/index.ts",
    "dev": "./scripts/start-dev.sh",
    "build": "npm run clean && tsup src/index.ts --format esm",
    "prod": "node dist/index.js",
    "clean": "rimraf dist",
    "lint": "eslint src/**/*.ts tests/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "test": "vitest --run --passWithNoTests",
    "db:create": "./scripts/create-db.sh",
    "db:stop": "./scripts/stop-dev.sh",
    "docs:generate": "tsx scripts/generate-swagger-docs.ts"
  },
  "dependencies": {
    "@koa/cors": "^5.0.0",
    "@koa/router": "^13.1.1",
    "bcrypt": "^6.0.0",
    "bullmq": "^5.61.0",
    "chokidar": "^5.0.0",
    "dotenv": "^17.2.1",
    "ioredis": "^5.8.1",
    "jsonwebtoken": "^9.0.2",
    "koa": "^2.16.2",
    "koa-bodyparser": "^4.4.1",
    "koa-logger": "^4.0.0",
    "node-cache": "^5.1.2",
    "pg": "^8.16.3",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@kit/eslint-config": "workspace:*",
    "@kit/typescript-config": "workspace:*",
    "@swc/core": "^1.13.5",
    "@types/bcrypt": "^6.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/koa": "^2.15.0",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-logger": "^3.1.5",
    "@types/koa__cors": "^5.0.0",
    "@types/koa__router": "^12.0.4",
    "@types/ms": "^2.1.0",
    "@types/node": "^22.10.2",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/winston": "^2.4.4",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.38.0",
    "is-generator-function": "1.1.0",
    "js-yaml": "^4.1.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.4",
    "swagger-jsdoc": "^6.2.8",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4",
    "zod": "^4.1.12"
  }
}
