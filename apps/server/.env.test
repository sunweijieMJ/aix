# ============================================
# 测试环境配置
# ============================================
NODE_ENV=test
PORT=3002
HOST=0.0.0.0
API_PREFIX=/local/v1

# ============================================
# 数据库配置
# ============================================
DB_TYPE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=base_node_test
DB_USER=postgres
DB_PASSWORD=password

# ============================================
# JWT 配置
# ============================================
JWT_SECRET=test_jwt_secret_key_for_testing_only
JWT_EXPIRES_IN=1h

# ============================================
# 缓存配置
# ============================================
CACHE_TYPE=memory
CACHE_TTL=300

# ============================================
# 日志配置
# ============================================
LOG_LEVEL=warn
LOG_FILE_ENABLED=false
LOG_DIR=./logs

# ============================================
# 安全配置
# ============================================
CORS_ORIGINS=["*"]
ENABLE_HELMET=false
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW=60000

# ============================================
# 监控配置
# ============================================
HEALTH_CHECK_ENABLED=false
METRICS_ENABLED=false

# ============================================
# API文档配置
# ============================================
SWAGGER_ENABLED=false
SWAGGER_PATH=/docs
